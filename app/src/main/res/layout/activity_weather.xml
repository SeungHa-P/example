<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.WeatherActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 영등포구"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt_address"
        android:textAlignment="center"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:src="@drawable/down"
        android:id="@+id/down"
        app:layout_constraintLeft_toLeftOf="@+id/txt_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_address"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:src="@drawable/up"
        android:id="@+id/up"
        app:layout_constraintRight_toRightOf="@+id/txt_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_address"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/down"
        app:layout_constraintLeft_toLeftOf="@+id/down"
        android:id="@+id/txt_down"
        android:text="19도"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/up"
        app:layout_constraintLeft_toLeftOf="@+id/up"
        android:id="@+id/txt_up"
        android:text="19도"
        android:textAlignment="center"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/txt_down"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/vPager"
        >

    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>