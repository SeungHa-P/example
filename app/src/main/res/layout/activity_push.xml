<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="com.example.example.activity.PushActivity" />

    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".activity.PushActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="나의 토큰"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:id="@+id/tokenTxt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tokenTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="메세지"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/msgtxt"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/msgtxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/msgEdt"
        android:textAlignment="center"
        android:hint="메세지를 입력해주세요."
        android:gravity="center"
        />


    <Button
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/msgEdt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:background="@color/colorAccent"
        android:id="@+id/pushBtn"
        android:text="전송하기"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>